{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "sourceMap": true,
      "rootDir": "./lib",
      "types": ["node", "jest"],
      "allowJs": true,    
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,    
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
    },
    "include": ["lib/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  